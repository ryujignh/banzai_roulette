<div class="container">
  <nav class="navbar navbar-default navbar-static-top">
    <a href="/" class="navbar-brand">Banzai Roulette</a>
  
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
        <div class="fb_logged_in">
          <li><%= image_tag("https://graph.facebook.com/#{current_user.uid}/picture?type=normal", width: '50', height: '50', class: 'img-circle') %>
            <%= link_to "Sign Out", '/sign_out', method: :get %>
          </li>
        </div>
      <% else %>
        <li class="fb_login"><%= link_to "auth/facebook" do %><i class="fa fa-facebook-square fa-5x img_login"></i></li>
          <% end %>
      <% end %>
    </ul>
  </nav>
</div>