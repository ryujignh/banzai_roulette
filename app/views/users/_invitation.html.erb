<% if current_user %>
  <div id="friends">
    <p><%= link_to "Invite Your Facebook Friends!", "#", :id => "invite_fb_friends" %></p>

    <div id="fb-root"></div>

    <script src="https://connect.facebook.net/en_US/all.js"></script>

    <script>
      $(function () {
        $("a#invite_fb_friends").click(function () {
          FB.init({
            appId: '960293740690317',
            cookie: false,
            status: true
          });

          //Create request dialogue
          var thisurl = ''
          FB.ui({
            method: 'apprequests',
            data: ''+thisurl+' ',
            message: '<%= current_user.first_name %> inviting you to awesome Banzai Roulette!'
          });
        });
//        function requestCallback(response) {
//          alert("User logged in");
//        });
      });
    </script>
  </div>
<% end %>